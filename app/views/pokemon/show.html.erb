<h2><a href="/pokemon">All pokemon</a></h2>
<h1><%= @pokemon.name %></h1>
<h2>Damage: <%= @pokemon.damage %></h2>
<h2>Health: <%= @pokemon.health %></h2>
<button id="editPokemon">Edit your pokemon</button>
<%= form_with url: "/pokemon/#{@pokemon.id}", method: :patch, id: "editForm", class: "invisible" do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name %>
  <%= form.label :health, "Health" %>
  <%= form.text_field :health %>
  <%= form.label :damage, "Damage" %>
  <%= form.text_field :damage %>
  <%= form.submit "Submit" %>
<% end %>
